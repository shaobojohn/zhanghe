<?xml version="1.0" encoding="utf-8"?>
<com.fineos.fileexplorer.views.FileItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/material_button_bg"
    android:paddingStart="16dp">

    <CheckBox
        android:id="@+id/checkbox_file_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:focusable="false"
        android:clickable="false"
        style="@style/fineos_checkbox"
       />

    <ImageView
        android:id="@+id/image_file_icon"
        android:layout_width="@dimen/file_view_image_side_length"
        android:layout_height="@dimen/file_view_image_side_length"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_toEndOf="@id/checkbox_file_selected"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/image_file_icon"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textview_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/default_file_title"
            android:textColor="@color/list_item_title_color"
            android:textSize="@dimen/fineos_first_level_big"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/textview_file_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_file_title"
            android:layout_marginEnd="5dp"
            android:singleLine="true"
            android:text="@string/default_file_date"
            android:textColor="@color/fineos_second_level_small"
            android:textSize="@dimen/fineos_second_level_small"  />

        <TextView
            android:id="@+id/textview_file_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textview_file_date"
            android:layout_alignBottom="@id/textview_file_date"
            android:singleLine="true"
            android:text="@string/default_file_count"
            android:textColor="@color/fineos_second_level_small"
            android:textSize="@dimen/fineos_second_level_small"  />

    </RelativeLayout>

