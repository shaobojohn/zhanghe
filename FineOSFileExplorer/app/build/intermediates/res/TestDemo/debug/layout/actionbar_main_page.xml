<?xml version="1.0" encoding="utf-8"?>
<!-- This is the app name and search button block -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_apptitle_and_search_button"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/actionbar"
                android:transitionName="transition_search"
                android:gravity="center"
>

    <TextView
        android:id="@+id/textview_app_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:text="@string/app_name"
        android:textColor="@color/fineos_text_color"
        android:textSize="@dimen/fineos_actionbar_title" />

    <ImageButton
        android:id="@+id/imagebutton_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:paddingEnd="16dp"
        android:src="@drawable/selector_search_button" />

</RelativeLayout><!-- From: file:/home/ubuntu/codes/zhanghe/FineOSFileExplorer/app/src/TestDemo/res/layout/actionbar_main_page.xml -->