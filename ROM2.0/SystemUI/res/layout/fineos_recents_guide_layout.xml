<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9a000000"
    android:visibility="gone"
    android:alpha="0"
    >
    
    <TextView
        android:id="@+id/txt_first_part"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="135dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="@string/fineos_recents_contexts_first_part"
        />

    <ImageView
        android:id="@+id/imageview_finger"
        android:src="@drawable/finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp" />

    <ImageView
        android:src="@drawable/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="223dp"
        android:layout_marginTop="234dp"/>

    <Button
        android:id="@+id/recents_guide_dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="93dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/recents_guide_dismiss_button"
        android:text="@string/got_it"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />



</RelativeLayout>
