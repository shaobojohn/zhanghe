<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.volley"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <com.example.volley.customtextview.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/test1"
            android:gravity="center"
            android:layout_weight="1"
            custom:titleText="test1"
            custom:titleTextSize="30sp"
            custom:text_origin_color="#ffffffff"
            custom:text_change_color="#ffff0000"
            custom:direction="left"
            />
        <com.example.volley.customtextview.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/test2"
            android:gravity="center"
            android:layout_weight="1"
            custom:titleText="test2"
            custom:titleTextSize="30sp"
            custom:text_origin_color="#ffffffff"
            custom:text_change_color="#ffff0000"
            custom:direction="left"
            />
        <com.example.volley.customtextview.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/test3"
            android:gravity="center"
            android:layout_weight="1"
            custom:titleText="test3"
            custom:titleTextSize="30sp"
            custom:text_origin_color="#ffffffff"
            custom:text_change_color="#ffff0000"
            custom:direction="left"
            />
    </LinearLayout>
	<android.support.v4.view.ViewPager  
        android:id="@+id/id_viewpager"  
        android:layout_width="match_parent"  
        android:layout_height="0dp"  
        android:layout_weight="1" >  
    </android.support.v4.view.ViewPager>  
</LinearLayout>
