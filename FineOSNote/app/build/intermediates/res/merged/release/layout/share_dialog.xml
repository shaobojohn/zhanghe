<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_share_title"
        android:textSize="17sp"
	    android:visibility="gone"
        android:text="@string/share_title"
        android:gravity="center_horizontal"
        />
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_weibo"
            android:visibility="gone"
            android:src="@drawable/ic_weibo"
            />
        <ImageView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_weixin"
	    android:visibility="gone"
            android:src="@drawable/ic_weixin"
            />
        <ImageView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_quanzi"
            android:visibility="gone"
            android:src="@drawable/ic_pengyouquan"
            />
	<View
	    android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
 	<ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_save"
            android:src="@drawable/ic_save"
            />
        <ImageView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_more"
            android:src="@drawable/ic_more"/>
       
        <View
	    android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="29dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_weibo"
            android:gravity="center_horizontal"
            android:text="@string/weibo"
            android:visibility="gone"
            android:textSize="12sp"
            />
        <TextView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_weixin"
            android:gravity="center_horizontal"
            android:text="@string/weixin"
            android:textSize="12sp"
	    android:visibility="gone"
            />
        <TextView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_quanzi"
            android:text="@string/pengyouquan"
            android:gravity="center_horizontal"
            android:textSize="12sp"
	    android:visibility="gone"
            />
	<View
	    android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
 	<TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_save"
            android:text="@string/save"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            />
        <TextView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email"
            android:text="@string/emai"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            />
       
        <View
	    android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
    </LinearLayout>

</LinearLayout>
