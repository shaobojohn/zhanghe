<resources>
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="list_font_l_normal">
        <item name="android:textSize">18.5sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mixer_item_label_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="DetailInfoLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mixer_item_label_color</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="My.Translucent" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>

    <style name="AlertCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="Preview" parent="@android:style/Theme.Holo.Light">
        <!--  
        <item name="android:homeAsUpIndicator">@com.fineos:drawable/ic_ab_back_holo_light</item>
        -->
    	<item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <style name="Theme.Holo.Wallpaper.NoTitleBar" parent="android:Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> 
    </style>
