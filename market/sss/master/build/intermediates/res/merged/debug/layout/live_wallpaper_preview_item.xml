<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!--
         <com.fineos.theme.ui.FlipImageView
        android:id="@+id/preview_image"
        android:layout_width="108dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:scaleType="fitXY" />
    -->

    <FrameLayout
        android:layout_width="@dimen/live_wallpaper_thumbnail_width"
        android:layout_height="@dimen/live_wallpaper_thumbnail_height" >

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="@dimen/live_wallpaper_thumbnail_width"
            android:layout_height="@dimen/live_wallpaper_thumbnail_height"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/using_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
    </FrameLayout>

    <TextView
        android:id="@+id/theme_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:textColor="@color/text_color2"
        android:textSize="@dimen/text_size3_dp"
        android:textStyle="bold" />

</LinearLayout>