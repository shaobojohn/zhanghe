<?xml version="1.0" encoding="UTF-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical" >
		
		<ScrollView
			android:id="@+id/appinfo_detail_layout"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:background="@drawable/bg_list_view"
			android:orientation="vertical" >
			<LinearLayout
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:id="@+id/app_detail"
				android:orientation="vertical" >
				
				<include
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					layout="@layout/appinfo_sub_detail" />
				
				<TextView
					android:layout_width="fill_parent" android:layout_height="27dip"
					android:gravity="center_vertical"
					android:paddingLeft="8.0dip"
					android:background="@drawable/bg_appinfo_splitbar"
					android:textAppearance="?android:textAppearanceMedium"
					android:textSize="15dip"
					android:textColor="@color/white"
					android:text="@string/app_description" />
				
				<TextView
					android:id="@+id/tv_appinfo_description"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center_vertical"					
					android:textAppearance="?android:textAppearanceSmall"
					android:textColor="@color/appinfo_text"
					android:lineSpacingMultiplier="1.3" 
					android:paddingLeft="2.0dip" 
					android:paddingRight="2.0dip" 
					android:paddingTop="5.0dip" 
					android:paddingBottom="2.0dip"/>
					
				<Button
					android:id="@+id/iv_appinfo_more"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:background="@drawable/ic_btn_applist"
					android:text="@string/appinfo_open"
					android:textColor="@color/title_text_blue"
					android:layout_gravity="bottom|right"
					android:layout_marginRight="7dip"
					android:layout_marginBottom="7dip"
					/>
	
				<include
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					layout="@layout/appinfo_detail_preview" />
				<TextView
					android:layout_width="fill_parent" android:layout_height="27dip"
					android:gravity="center_vertical"
					android:paddingLeft="8.0dip"
					android:background="@drawable/bg_appinfo_splitbar"
					android:textAppearance="?android:textAppearanceMedium"
					android:textSize="15dip"
					android:textColor="@color/white"
					android:text="@string/app_relative" />
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:paddingLeft="4.0dip"
				    android:paddingRight="4.0dip"
				    android:paddingTop="8.0dip"
				    android:orientation="horizontal">
				    <LinearLayout 
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:id="@+id/relate_area1"
				        android:orientation="vertical"
				        android:gravity="center_horizontal"
				        android:visibility="invisible"
				        android:layout_weight="1">
				        <RelativeLayout
	    				android:layout_width="48dip" android:layout_height="48dip"
	    				android:layout_centerVertical="true"
	    				android:background="@drawable/icon_bg">
				        <ImageView 
				        android:layout_width="42.0dip" 
				        android:layout_height="42.0dip"
				        android:id="@+id/menu_about1"
				        android:src="@drawable/icon"
				        android:layout_centerInParent="true"/>
				        </RelativeLayout>
				        <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:singleLine = "true"
				        android:textColor="@color/text_blue"
				        android:id="@+id/menu_about_text1"
				        android:ellipsize="middle"
				        android:gravity="center"/>
			<!--	        <RatingBar
						android:id="@+id/relate_appinfo_rating1"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
				        android:gravity="center_horizontal"
						android:isIndicator="true" style="@style/RatingBar" /> -->	
				    </LinearLayout>
				    
				    <LinearLayout 
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:id="@+id/relate_area2"
				        android:orientation="vertical"
				        android:visibility="invisible"
				        android:gravity="center_horizontal"
				        android:layout_weight="1">
				        <RelativeLayout
	    				android:layout_width="48dip" android:layout_height="48dip"
	    				android:layout_centerVertical="true"
	    				android:background="@drawable/icon_bg">
				        <ImageView 
				        android:layout_width="42.0dip" 
				        android:layout_height="42.0dip"
				        android:id="@+id/menu_about2"
				        android:src="@drawable/icon"
				        android:layout_centerInParent="true"/>
				        </RelativeLayout>
				        <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:singleLine = "true"
				        android:textColor="@color/text_blue"
				        android:id="@+id/menu_about_text2"
				        android:ellipsize="middle"
				        android:gravity="center"/>
				<!--        <RatingBar
						android:id="@+id/relate_appinfo_rating2"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
				        android:gravity="center_horizontal"
						android:isIndicator="true" style="@style/RatingBar" /> -->	
				    </LinearLayout>
				    
				    <LinearLayout 
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:id="@+id/relate_area3"
				        android:orientation="vertical"
				        android:visibility="invisible"
				        android:gravity="center_horizontal"
				        android:layout_weight="1">
				        <RelativeLayout
	    				android:layout_width="48dip" android:layout_height="48dip"
	    				android:layout_centerVertical="true"
	    				android:background="@drawable/icon_bg">
				        <ImageView 
				        android:layout_width="42.0dip" 
				        android:layout_height="42.0dip"
				        android:id="@+id/menu_about3"
				        android:src="@drawable/icon"
				        android:layout_centerInParent="true"/>
				        </RelativeLayout>
				        <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:singleLine = "true"
				        android:textColor="@color/text_blue"
				        android:id="@+id/menu_about_text3"
				        android:ellipsize="middle"
				        android:gravity="center"/>
				<!--        <RatingBar
						android:id="@+id/relate_appinfo_rating3"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
				        android:gravity="center_horizontal"
						android:isIndicator="true" style="@style/RatingBar" /> -->	
				    </LinearLayout>
				    
				    <LinearLayout 
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:id="@+id/relate_area4"
				        android:orientation="vertical"
				        android:visibility="invisible"
				        android:gravity="center_horizontal"
				        android:layout_weight="1">
				        <RelativeLayout
	    				android:layout_width="48dip" android:layout_height="48dip"
	    				android:layout_centerVertical="true"
	    				android:background="@drawable/icon_bg">
				        <ImageView 
				        android:layout_width="42.0dip" 
				        android:layout_height="42.0dip"
				        android:id="@+id/menu_about4"
				        android:src="@drawable/icon"
				        android:layout_centerInParent="true"/>
				        </RelativeLayout>
				        <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:singleLine = "true"
				        android:textColor="@color/text_blue"
				        android:id="@+id/menu_about_text4"
				        android:ellipsize="middle"
				        android:gravity="center"/>
			<!--         <RatingBar
						android:id="@+id/relate_appinfo_rating4"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
				        android:gravity="center_horizontal"
						android:isIndicator="true" style="@style/RatingBar" /> -->	
				    </LinearLayout>
				    
				</LinearLayout>
				<TextView					
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center_vertical" android:layout_marginTop="4.0dip"
					android:paddingLeft="8.0dip" android:paddingBottom="2.0dip"
					android:background="@drawable/bg_appinfo_splitbar"
					android:textAppearance="?android:textAppearanceMedium"
					android:textColor="@color/text_blue"
					android:text="@string/app_permission" 
					android:id="@+id/appinfo_detail_permission_title"/>
				<LinearLayout
					android:id="@+id/appinfo_permission_view"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />
				
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
	
</merge>