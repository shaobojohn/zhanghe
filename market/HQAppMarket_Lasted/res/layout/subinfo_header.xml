<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="38dip"
	android:background="@drawable/sub_bg_tab_header"
	android:orientation="vertical" > 
	
	<RelativeLayout
		android:layout_width="fill_parent" android:layout_height="fill_parent">
	
		<TextView
			android:id="@+id/subinfo_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15.0dip" 
			android:layout_marginRight="5.0dip" 
			android:textSize="18dip"
			android:textAppearance="?android:textAppearanceMedium"
			android:textColor="@color/white"/>
		
		<ImageView
			android:id="@+id/subinfo_hot"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/subinfo_title"
			android:layout_marginBottom="10.0dip"
			android:src="@drawable/ic_recommend_subject_item_intro_hot" android:visibility="gone" />
	</RelativeLayout>
	
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="0dip"
		android:orientation="horizontal">
		
		<TextView
			android:id="@+id/subinfo_date"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1.0"
			android:layout_marginLeft="15.0dip"
			android:gravity="left"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="@color/title_text_blue" />
		
		<TextView
			android:id="@+id/subinfo_visit"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1.0" android:layout_marginRight="10.0dip"
			android:gravity="right"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="@color/title_text_blue" />
	</LinearLayout>
	
</LinearLayout>