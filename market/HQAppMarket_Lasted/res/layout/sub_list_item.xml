<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sub_listitem_layout"
	android:layout_width="fill_parent" android:layout_height="140.0dip"
	android:orientation="horizontal">
	
	<ImageView
		android:id="@+id/sub_listitem_thumb"
		android:layout_width="0dip" android:layout_height="100dip"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:padding="10dip"
		android:background="@android:color/transparent" />
	
	<RelativeLayout
		android:layout_width="0dip" android:layout_height="wrap_content"
		android:layout_weight="1" android:layout_gravity="center_vertical"
		 android:layout_marginRight="4.0dip" >
		
<!--  		<ImageView
			android:id="@+id/sub_listitem_hot"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_alignParentTop="true" android:layout_alignParentRight="true"
			android:padding="4.0dip" android:visibility="gone"
			android:src="@drawable/ic_recommend_subject_item_intro_hot" />-->
		
		<TextView
			android:id="@+id/sub_listitem_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="5.0dip" android:layout_marginBottom="3.0dip"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="@color/text_blue"
			android:maxLines="2" android:ellipsize="end"
			android:textSize="20.0sp" />
		
		<TextView
			android:id="@+id/sub_listitem_date"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="3.0dip"
			android:layout_marginRight="7.0dip"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/sub_listitem_title"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="@color/silver_grey" />
		
		<TextView
			android:id="@+id/sub_listitem_visit"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="3.0dip"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/sub_listitem_date"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="@color/silver_grey" />
	</RelativeLayout>
	
</LinearLayout>